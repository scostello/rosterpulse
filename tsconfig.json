{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@rosterpulse/*": ["*", "bazel-bin/libraries/*", "bazel-genfiles/libraries/*"],
      "rosterpulse/*": ["*", "bazel-bin/*", "bazel-genfiles/*"]
    },
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["bazel-*", "node_modules"]
}
